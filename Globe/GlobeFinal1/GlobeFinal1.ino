  message += "URI: "; message += server.uri(); message += "\nMethod: "; 
  message += (server.method() == HTTP_GET)?"GET":"POST"; message += "\nArguments: "; message += server.args();
  message += "\n";
  for (uint8_t i=0; i<server.args(); i++){ message += " " + server.argName(i) + ": " + server.arg(i) + "\n"; }
  server.send(404, "text/plain", message);
}

void handleBody() { //Handler for the body path
  String message = "Number of args received:";
  message += server.args();            //Get number of parameters
  message += "\n"; 
  for (int i = 0; i < server.args(); i++) {
    message += "Arg n" + (String)i + " -> ";   //Include the current iteration value
    message += server.argName(i) + ": ";     //Get the name of the parameter
    message += server.arg(i) + "\n";              //Get the value of the parameter
  }
  if (server.arg("lat")!= ""){     //Parameter not found
    message = "lat = ";
    clat = server.arg("lat").toInt();     //Gets the value of the query parameter
   }
  if (server.arg("lon")!= ""){     //Parameter not found
    message = "Tlon = ";
    clong = server.arg("lon").toInt();     //Gets the value of the query parameter
   }
  Serial.print("lat, lon");
  Serial.print(clat); Serial.print(", ");
  Serial.print(clong); Serial.print("\n");
  server.send(200, "text/plain", message);       //Response to the HTTP request
}

